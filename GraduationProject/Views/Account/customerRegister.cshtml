
@{ 
    Layout = null;
}
 @model GraduationProject.Models.RegisterViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Create Your Jumia Account</title>
    <link rel="stylesheet" href="~/Content/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="container">
            <div class="col-12 align-self-center mx-auto">
                <div class="row">
                    <div class="col-12 col-md-12">

                        <h4 class="p-0">Create Account</h4>
                        <br />
                        <div class="row">
                            <div class="col-4 form-group form-input">

                                @Html.LabelFor(m => m.Fname)
                               
                                @Html.TextBoxFor(m => m.Fname, new { @class = "form-label" })
                                


                            </div>
                            <div class="col-4 form-group form-input">


                                <input type="text" name="Lname" value="" required />
                                <label for="Lname" class="form-label">Last Name</label>

                            </div>
                            <div class="row ">
                                <div class="col-4 form-group form-input">
                                    <input type="text" name="Email" id="name" value="" required />
                                    <label for="Email" class="form-label">E-mail</label>
                                </div>
                                <div class="col-4 form-group form-input">

                                    <input type="password" name="Password" id="password-field" value="" required />

                                    <label for="Password" class="form-label">Password</label>

                                </div>
                                <div class="row align-items-baseline">
                                    <div class="col col-xxl-1 form-group form-input">
                                        <p class="h6" style="color: rgb(189, 189, 189);"><br />Prefix</p>
                                        <h5>+20</h5>
                                    </div>
                                    <div class="col col-xxl-3 form-group form-input  px-0" style="margin-top: auto;">
                                        <input type="text" name="PhoneNo" id="name" value="" required />
                                        <label for="PhoneNo" class=" form-label">Phone Number(Optional)</label>

                                    </div>
                                </div>
                                <br /><br /><br /><br />

                                <div class="col-9 my-1">
                                    <div class="w-90">
                                        <label class="checkbox-wrap checkbox-primary" style="font-weight: 350;">
                                            accept the <a href="#" style="color: #f68b1e;text-decoration: none;">Terms & Conditions</a>
                                            <input type="checkbox">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>

                                    <br />
                                    <div class="w-90">
                                        <label class="checkbox-wrap checkbox-primary" style="font-weight: 350;">
                                            I want to recive Jumia NewsLetters With The best deals and offers
                                            <input type="checkbox">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-9">
                                    <input type="submit" class="btn col-12 text-center jbt reg" style="color: white; background-color: #f68b1e;" value="CREATE ACCOUNT">
                                    <br />
                                    <div class="row col-12 ">
                                        <hr color="grey" class="col-5 mt-3">
                                        <p style="color: grey;" class="col-1 mx-auto">OR</p>
                                        <hr color="grey" class="col-5 mt-3">

                                    </div>

                                    <input type="button" class="btn col-12  jbt fb" style="color: white; background-color: #40588a;" value="REGISTER WITH FACEBOOK">

                                    <br /> <br /> <br />
                                    <pre style="text-align: center;">Already have an account?
                                    <a href="#" class="h5 anchlogin">  LOGIN</a>
                                    @*<input type="submit" class="anchlogin h5" value="LOGIN" />*@
                                     </pre>



                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </div>

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="~/Scripts/main.js"></script>
    }
</body>

    
</html>

