        </div>
        <div class="transactions tab-content d-block">
            <div id="all0" class="tab-pane fade show active ">
                @if (Model.Count() == 0)
                {
                    <h5 class="text-center block-mrgb ng-binding">
                        You don't have any listings on Souq. Start selling on Souq now!
                    </h5>
                }
                else
                {

                    <table class="table table-hover  table-responsive-md ">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Description</th>

                                <th>EDIT</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>



                            @foreach (var item in Model)
                            {
                                <tr class="DataTable">
                                    <td>@item.ID</td>
                                    <td><img src="~/images/@item.Image" width="96" height="350" alt="@item.Name"></td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>@item.Cost</td>

                                    <td>@item.Description</td>
                                    <td>
                                        @Html.ActionLink("Edit", "edit", "product", new { id = item.ID }, new { @class = "btn btn-warning" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Delete", "Delete", "product", new { id = item.ID }, new { @class = "btn btn-danger", onclick = "return confirm('are you sure to delete')" })

                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                }
                <br />
                <a class="btn tiny" href="../product/create">
                    <i class="btnbox"><img src="~/images/boxbtn.png" /></i> Start Listing Items
