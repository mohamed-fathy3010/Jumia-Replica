
@model Product

@{
    Layout = "~/Views/Shared/Seller_layout.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Product</title>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/css/addProduct.css" rel="stylesheet" />
    <link rel="icon" type="image/ico" href="https://www.jumia.com.eg/assets_he/favicon.717283be.ico">
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="container">
            <div class="row mycontainerdiv">
                <div class="col-12 product">
                    <div>
                        <h3>Edit Product : @Model.Name</h3>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="Name" value="@Model.Name"><br><br>
                        @Html.ValidationMessageFor(a => a.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Cost">Price</label>
                        <input type="text" id="price" name="Cost" value="@Model.Cost"><br><br>
                        @Html.ValidationMessageFor(a => a.Cost, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="CategoryID">Categories</label>
                        <input list="CategoryID" name="CategoryID" id="browser">
                        @Html.DropDownListFor(a => a.CategoryID, null, htmlAttributes: new { id = "browsers" })
                    </div>

                    <div class="form-group">
                        <label for="PromotionsID">Promotions</label>

                        <input list="PromotionsID" name="PromotionsID" id="browser">
                        @Html.DropDownListFor(a => a.CategoryID, null, htmlAttributes: new { id = "browsers" })

                    </div>
                    <br /><br />

                    <div class="row Upload" style="padding: .4rem;">
                        <div class="col-4">

                            @*<a href="javascript:void(0)" style="display: none;" onclick="$('#pImage').click()">Upload Images</a>*@
                            <input class="form-control pImage" type="file" name="pImage" multiple>

                        </div>
                        <div class="col-8">
                            <div class="preview-images-zone">
                                <div class="preview-image preview-show-1">
                                    <div class="image-cancel" data-no="1">x</div>
                                    <div class="image-zone">
                                        <img src="~/images/ProductImageUploaded/@Model.Image" id="pro-img-1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><br>

                    <div class="row DescriptionDiv form-group">
                        <div>
                            <label for="Description">Description</label>
                        </div>
                        @Html.TextAreaFor(m => m.Description, new { id = "summernote" })
                    </div>

                    <br />
                    <input id="addproductinput" type="submit" value="Edit"><br /><br />


                </div>
            </div>
        </div>












    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <script>
        $('#summernote').summernote({
            placeholder: 'Add Description',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['view', ['fullscreen', 'help']]
            ]
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/Scripts/addProduct.js"></script>
</body>
</html>
