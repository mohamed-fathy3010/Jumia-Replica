                </a>
            </div>
            <div id="pending-review0" class="tab-pane fade">
                <h5 class="text-center block-mrgb ng-binding">
                    You don't have any pending listings now
                </h5>
            </div>
            <div id="rejected0" class="tab-pane fade">
                <h5 class="text-center block-mrgb ng-binding">
                    Cool! No rejected items here
                </h5>
            </div>
            <div id="expired0" class="tab-pane fade">
                <h5 class="text-center block-mrgb ng-binding">
                    There are not expired items here
                </h5>
            </div>
            <div id="sold-out0" class="tab-pane fade">
                <h5 class="text-center block-mrgb ng-binding">
                    You don't have any sold out inventory
                </h5>
            </div>
            <div id="paused0" class="tab-pane fade">
                <h5 class="text-center block-mrgb ng-binding">
                    No paused listings around here
                </h5>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            function contains(txtone, txttwo) {
                if (txtone.indexOf(txttwo) != -1)
                    return true;
            }
            $("#search-input").keyup(function () {
                var searchtxt = $("#search-input").val().toLocaleLowerCase();
                $(".DataTable").each(function () {
                    if (!contains($(this).text().toLocaleLowerCase(), searchtxt)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });

        $('[data-toggle="buttons"] .checkselect').on('click', function () {
            // toggle style
            $(this).toggleClass('btn-secondary active');

            // toggle checkbox
            var $chk = $(this).find('[type=checkbox]');
            $chk.prop('checked', !$chk.prop('checked'));
            console.log("selected");
            return false;
        });
    </script>
