@model GraduationProject.Models.SellerRegisterViewModel

@{
    Layout = "~/Views/Shared/Seller_layout.cshtml";
    ViewBag.title = "Seller Register";

}

<!DOCTYPE html>

<html>
<head>
    
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    @section styles{
    <link rel="stylesheet" href="~/Content/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/Content/css/sellerRegister.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()



        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="container">
            <div class="col-12 align-self-center">
                <div class="row">

                    <div class="col-12 col-md-12">

                        <h4 class="p-0">Create Seller Account</h4>
                        <br />

                        <div class="col-4 form-group form-input">
                            <input type="text" name="Fname" id="name" value="" required />
                            <label for="Fname" class="form-label">FirstName</label>


                        </div>
                        <div class="col-4 form-group form-input">
                            <input type="text" name="Lname" id="name" value="" required />
                            <label for="Lname" class="form-label">LastName</label>

                        </div>
                        <div class="col-4 form-group form-input">
                            <input type="text" name="Email" id="name" value="" required />
                            <label for="Email" class="form-label">Email</label>

                        </div>
                        <div class="col-4 form-group form-input">
                            <input type="text" name="Password" id="name" value="" required />

                            <label for="Password" class="form-label">Password</label>

                        </div>

                        <div class="col-4 form-group form-input">
                            <input type="text" name="NationalID" id="name" value="" required />
                            <label for="NationalID" class="form-label">National ID</label>

                        </div>

                        <!-- <div class="row "> -->
                        <div class="col-4 form-group form-input">
                            <input type="text" name="BusinessName" id="name" value="" required />
                            <label for="BusinessName" class="form-label">Business Name</label>

                        </div>

                        <div class="align-items-baseline">
                            <div class="col col-xxl-1 form-group form-input ">
                                <p class="h6" style="color: rgb(189, 189, 189);"><br />Prefix</p>
                                <h5>+20</h5>
                            </div>
                        </div>
                        <div class=" col-3 form-group form-input  px-0" style="margin-top: auto;">
                            <input type="text" name="PhoneNo" id="name" value="" required />
                            <label for="PhoneNo" class=" form-label">Phone Number</label>


                        </div>
                        <div class="row pt-2 pb-3">
                            <p class="h6" style="color: rgb(189, 189, 189);"><br />Expired Date</p>

                            <div class="col-md-6">
                                <div class="input-group ">
                                    @Html.EditorFor(a => a.ExpiredDate, new { @class = "form-control date-withicon", placeholder = "Select Date" })

                                </div>

                                <div class="row pt-2 pb-3">

                                    <p class="h6" style="color: rgb(189, 189, 189);"><br />Front Image</p>
                                    <div id="profile-container">
                                        <span class="fa fa-photo"></span>

                                    </div>
                                    <input type="file"
                                           name="FrontImage" placeholder="Photo" required>


                                </div>
                                <div class="row pt-2 pb-3">

                                    <p class="h6" style="color: rgb(189, 189, 189);"><br />Back Image</p>
                                    <div id="profile-container">
                                        <span class="fa fa-photo"></span>
                                    </div>

                                    <input type="file"
                                           name="BackImage" placeholder="Photo" required>

                                </div>
                            </div>
                        </div>
                        <h4 class="p-0">Inventory</h4>
                        <br />
                        <div class="row">
                            <div class="col-4 form-group form-input">
                                <input type="text" name="City" required />
                                <label for="name" class="form-label">City</label>
                            </div>
                            <div class="row">
                                <div class="col-4 form-group form-input">
                                    <input type="text" name="Street" required />
                                    <label for="Street" class="form-label">Street</label>
                                </div>
                                <div class="row">
                                    <div class="col-4 form-group form-input">
                                        <input type="text" name="BuildingNum" required />
                                        <label for="BuildingNum" class="form-label">Building Num</label>
                                    </div>
                                    <div class="align-items-baseline">
                                        <div class="col col-xxl-1 form-group form-input ">
                                            <p class="h6" style="color: rgb(189, 189, 189);"><br />Prefix</p>
                                            <h5>+20</h5>
                                        </div>
                                    </div>
                                    <div class=" col-3 form-group form-input  px-0" style="margin-top: auto;">
                                        <input type="text" name="LandLineNum" required />
                                        <label for="LandLineNum" class=" form-label">LandLine Number</label>

                                    </div>
                                </div>


                                <br /><br /><br /><br />

                                <div class="col-9 my-1">
                                    <div class="w-90">
                                        <label class="checkbox-wrap checkbox-primary" style="font-weight: 350;">
                                            accept the <a href="#" style="color: #f68b1e;text-decoration: none;">Terms & Conditions</a>
                                            <input type="checkbox">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>

                                    <br />

                                </div>
                                <div class="col-9">
                                    <input type="submit" class="btn col-12 text-center jbt reg" style="color: white; background-color: #f68b1e;" value="CREATE ACCOUNT">
                                    <br />
                                    <div class="row col-12 ">
                                        <hr color="grey" class="col-5 mt-3">
                                        <p style="color: grey;" class="col-1 mx-auto">OR</p>
                                        <hr color="grey" class="col-5 mt-3">

                                    </div>

                                    <input type="button" class="btn col-12  jbt fb" style="color: white; background-color: #40588a;" value="REGISTER WITH FACEBOOK">

                                    <br /> <br /> <br />
                                    <pre style="text-align: center;">Already have an account?
<a href=@Url.Action("sellerlogin","account") class="h5 anchlogin">  LOGIN</a> </pre>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </form>






    @*<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/Scripts/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/sellerregister.js"></script>*@
</body>
</html>
