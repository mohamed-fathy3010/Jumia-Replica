    <script>
        window.addEventListener('load', function () {
            let login = document.querySelector(".login");
            let help = document.querySelector(".help");
            let down1 = document.querySelector(".down1");
            let up1 = document.querySelector(".up1");
            let down2 = document.querySelector(".down2");
            let up2 = document.querySelector(".up2");
            var state1 = false;
            var state2 = false;

            login.onclick = function () {
                let show = document.querySelector(".dropdown");
                state1 = !state1;

                let showBool = show.classList.contains("show");
                console.log(showBool)
                if (state1) {
                    down1.style.display = "none";
                    up1.style.display = "block";

                    down2.style.display = "block";
                    up2.style.display = "none";

                    // console.log(element.getAttribute("aria-expanded"))
                } else {
                    down1.style.display = "block";
                    up1.style.display = "none";

                    // down2.style.display = "none";
                    // up2.style.display = "block";
                }
            }
            help.onclick = function () {
                state2 = !state2;
                if (state2) {
                    down2.style.display = "none";
                    up2.style.display = "block";

                    down1.style.display = "block";
                    up1.style.display = "none";

                } else {
                    down2.style.display = "block";
                    up2.style.display = "none";

                    // down1.style.display = "none";
                    // up1.style.display = "block";
                }
            }
        })
