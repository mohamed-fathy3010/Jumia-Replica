    <link rel="icon" type="image/ico" href="https://www.jumia.com.eg/assets_he/favicon.717283be.ico">
</head>
<body>
    <div class="container">
        <div class="card mb-3">
            <div class="row g-0">
              <div class="col-12 col-sm-6 col-md-4">
                  <div class="carousel  text-center slide "  id="mycarousel" >
                    <ul id="u2" class="carousel-indicators col-9">
                        <img src="2.jpg" data-target="#mycarousel" data-slide-to="0" class="active">
                        <img src="1.jpg" data-target="#mycarousel" data-slide-to="1">
                        <img src="3.jpg" data-target="#mycarousel" data-slide-to="2">
                        <img src="1.jpg" data-target="#mycarousel" data-slide-to="3">
                    </ul>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="2.jpg"/> 
                        </div>
                        <div class="carousel-item">
                            <img src="1.jpg"/>
                        </div>
                        <div class="carousel-item">
                            <img src="3.jpg"/>
                        </div>
                        <div class="carousel-item">
                            <img src="1.jpg"/>
                        </div>
                    </div><!-- End Of Inner-->
               
                    <a href="#" class="carousel-control-prev" data-slide="prev" data-target="#mycarousel"><span style="margin-top:25rem ; color: black;" class="carousel-control-prev-icon  bg-secondary col-2"></span></a>
                    <a href="#" class="carousel-control-next" data-slide="next" data-target="#mycarousel"><span style="margin-top:25rem ; color: black;" class="carousel-control-next-icon bg-secondary col-2"></span></a>
                 </div>
               </div>

              <div class="col-12 col-sm-6 col-md-8 productDatails">
                <div class="card-body">
                  <h3 class="card-title">Apple iPhone 6S Plus with FaceTime - 64GB, 4G LTE, Gold</h3>
                  <p class="card-text">Name <span>iPhone 6s Plus</span></p>
                  <p class="card-text">Brand <span> Apple </span></p>
                  <p class="card-text">Price <span>8000</span></p>
                  <p class="card-text">Categories <span>Mobile</span></p>
                  <p class="card-text">Promotions <span>5%</span></p>
                  <!-- /<p class="card-text">Description <span>iPhone 6s Plus</span></p> -->
                  <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                  <div class="stars">
                    <form action="">
                      <input class="star star-5" id="star-5" type="radio" name="star"/>
                      <label class="star star-5" for="star-5"></label>
                      <input class="star star-4" id="star-4" type="radio" name="star"/>
                      <label class="star star-4" for="star-4"></label>
                      <input class="star star-3" id="star-3" type="radio" name="star"/>
                      <label class="star star-3" for="star-3"></label>
                      <input class="star star-2" id="star-2" type="radio" name="star"/>
                      <label class="star star-2" for="star-2"></label>
                      <input class="star star-1" id="star-1" type="radio" name="star"/>
                      <label class="star star-1" for="star-1"></label>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
    </div>
  </div>
