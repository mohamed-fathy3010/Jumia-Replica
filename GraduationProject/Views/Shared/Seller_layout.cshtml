
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    @RenderSection("styles", false)
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
          integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
          crossorigin="anonymous" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link href="~/Content/style.css" rel="stylesheet" />
    <title>@ViewBag.title</title>
</head>

<body>
    <nav class="navbar navbar-expand navbar-light bg-light justify-content-between">
        <!-- Dropdown when user is authenticated -->
        <!-- dropdown when user not authenticated -->
        <div class="dropdown mr-1">
            <button class="dropbtn">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="dropdown-content" style="z-index:1000;">
                <div class="dashboard">
                    <a href="@Url.Action("Dashbored","Seller")">Dashboard</a>
                </div>
                <!-- Supermarket -->
                <div class="btn-group dropright w-100 dropdown-content">
                    <a type="button" class=" dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Inventory
                    </a>
                    <div class="dropdown-menu">
                        <!-- Dropdown menu links -->
                        <a href=@Url.Action("InventoryManagement","seller")>Inventory Management</a>
                        <a href=@Url.Action("create","product")>Add Product </a>
                    </div>
                </div>
                <div class="orders">
                    <a href="#">Orders</a>
                </div>
                <div class="btn-group dropright w-100 dropdown-content">
                    <a type="button" class=" dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Orders
                    </a>
                    <div class="dropdown-menu">
                        <!-- Dropdown menu links -->
                        <a href=@Url.Action("OrderManagement","seller")>OrderManagement</a>
                        <a href=@Url.Action("ReturnManagement","seller")>ReturnManagement</a>
                        <a href=@Url.Action("CanceledOrders","seller")>CanceledOrders</a>
                    </div>
                </div>
                <div class="orders">
                    <a href="#">Orders</a>
                </div>
                <div class="btn-group dropright w-100 dropdown-content">
                    <a type="button" class=" dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Post Delivery
                    </a>
                    <div class="dropdown-menu">
                        <!-- Dropdown menu links -->
                        <a href=@Url.Action("ComplaintsManagement","seller")>ComplaintsManagement</a>
                        <a href=@Url.Action("FeedBack","seller")>FeedBack</a>

                    </div>
                </div>
                <div class="orders">
                    <a href="#">Orders</a>
                </div>
                <div class=" dropdown-content">
                    <a href=@Url.Action("FeeDiscounts","seller")>
                        Fee Discount
                    </a>
                </div>
                @*<div class="orders">
                        <a href="#">Orders</a>
                    </div>*@


            </div>
        </div>
        <a class="navbar-brand mr-4 " href="/">
            <img src="https://cdn.freelogovectors.net/wp-content/uploads/2019/02/jumia-logo.png" width="130px"
                 height="30px">
        </a>
        <ul class="navbar-nav mr-sm-2 links ">

            <!-- when user is login -->
            <li class="nav-item d-flex">
                <div class="dropdown align-items-center d-flex">
                    <a class=" btn d-flex login align-items-center justify-content-center text-center" href="#" role="button"
                       id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="far fa-user"></i>
                        <span>
                            @(User.Identity.IsAuthenticated && User.IsInRole("seller")?User.Identity.Name:"Login")

                        </span><i class="fas fa-chevron-down down1 text-center d-none d-md-block"></i><i class="fas fa-chevron-up up1 d-none"></i>
                    </a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("seller"))
                    {
                        <form class="logout-form" action="@Url.Action("LogOff", "Account")" method="post">
                            @Html.AntiForgeryToken()
                            <button class="btn">Log out</button>
                        </form>
                    }

                    <div class="dropdown-menu dropdown-menu-center" aria-labelledby="dropdownMenuLink">

                        <a class="dropdown-item item" href="@Url.Action("SellerEdit", "Account")"><i class="far fa-user mr-3"></i>Edit Account</a>
                        @*<a class="dropdown-item item" href="seller/OrderManagement"><i class="fas fa-box mr-3"></i>Orders</a>*@
                        @* <a class="dropdown-item item" href="#"><i class="far fa-heart mr-3"></i>Saved Items</a>*@
                    </div>
                </div>
            </li>


        </ul>
    </nav>


    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>

    <script>
        window.addEventListener('load', function () {
            let login = document.querySelector(".login");
            let help = document.querySelector(".help");
            let down1 = document.querySelector(".down1");
            let up1 = document.querySelector(".up1");
            let down2 = document.querySelector(".down2");
            let up2 = document.querySelector(".up2");
            var state1 = false;
            var state2 = false;

            login.onclick = function () {
                let show = document.querySelector(".dropdown");
                state1 = !state1;

                let showBool = show.classList.contains("show");
                console.log(showBool)
                if (state1) {
                    down1.style.display = "none";
                    up1.style.display = "block";

                    down2.style.display = "block";
                    up2.style.display = "none";

                    // console.log(element.getAttribute("aria-expanded"))
                } else {
                    down1.style.display = "block";
                    up1.style.display = "none";

                    // down2.style.display = "none";
                    // up2.style.display = "block";
                }
            }
            help.onclick = function () {
                state2 = !state2;
                if (state2) {
                    down2.style.display = "none";
                    up2.style.display = "block";

                    down1.style.display = "block";
                    up1.style.display = "none";

                } else {
                    down2.style.display = "block";
                    up2.style.display = "none";

                    // down1.style.display = "none";
                    // up1.style.display = "block";
                }
            }
        })
    </script>
    @RenderBody()
    @RenderSection("scripts", false)

</body>

</html>