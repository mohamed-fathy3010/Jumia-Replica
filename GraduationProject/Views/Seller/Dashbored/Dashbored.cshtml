@{
    Layout = "~/Views/Shared/Seller_layout.cshtml";

    ViewBag.Title = "Dashbored Page";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,300,600,800,900" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/css/Seller/Dashbored.css">

    <title>Dashbored Page</title>
</head>
<body>
    <div class="container">
        <div class="row mt-5 invCardContainer">
            <div class="col-5 col-md-2 inventoryCard">
                <h6>Rejected</h6>
                <div class="circle" style="background-color: rgb(255 92 92);">
                    <h6>94</h6>
                </div>
                <p>View</p>
            </div>
            <div class="col-5 col-md-2 inventoryCard">
                <h6>LIVE</h6>
                <div class="circle" style="background-color:rgb(52, 200, 154);">
                    <h6>94</h6>
                </div>
                <p>View</p>
            </div>
            <div class="col-11 col-md-2 inventoryCard">
                <h6>SOLD OUT</h6>
                <div class="circle" style="background-color:#bb0303;">
                    <h6>94</h6>
                </div>
                <p>View</p>
            </div>
            <div class="col-5 col-md-2 inventoryCard">
                <h6>PENDING</h6>
                <div class="circle" style="background-color:rgb(255 92 92);">
                    <h6>94</h6>
                </div>
                <p>View</p>
            </div>
            <div class="col-5 col-md-2 inventoryCard">
                <h6>EXPIRED</h6>
                <div class="circle" style="background-color:rgb(255 92 92);">
                    <h6>94</h6>
                </div>
                <p>View</p>
            </div>
        </div>

        <div class="row mt-5 invCardContainer">
            <div id="card1" class="col-5 col-md-2 OrderCard">
                <i class="fa fa-cart-plus"></i>
                <h5>6</h5>
                <h5>Awaiting Action</h5>
                <p>Take Action</p>
            </div>
            <div id="card2" class="col-5 col-md-2 OrderCard">
                <i class="fa fa-truck"></i>
                <h5>6</h5>
                <h5>Awaiting Action</h5>
                <p>Take Action</p>
            </div>
            <div id="card3" class="col-5 col-md-2 OrderCard">
                <i class="fa fa-undo"></i>
                <h5>6</h5>
                <h5>Awaiting Action</h5>
                <p>Take Action</p>
            </div>
            <div id="card4" class="col-5 col-md-2 OrderCard">
                <i class="fa fa-exclamation-circle"></i>
                <h5>6</h5>
                <h5>Awaiting Action</h5>
                <p>Take Action</p>
            </div>
        </div>

        <div class="row mt-5 invCardContainer">
            <div class="col-11 col-md-7 CurvCard">
                <canvas id="myChart"></canvas>
            </div>
            <div class="col-11 col-md-4 FinancialCard">
                <h6>Financials</h6>
                <div class="row">
                    <div class="col-8">
                        <p>Available Balance</p>
                    </div>
                    <div class="col-4">
                        <p>64557 AED</p>
                    </div>
                </div>
                <hr style="border-top:2px dotted rgba(0,0,0,.1);">
                <div class="row">
                    <div class="col-8">
                        <p>Pending Balance</p>
                    </div>
                    <div class="col-4">
                        <p>64557 AED</p>
                    </div>
                </div>
                <hr style="border-top:2px dotted rgba(0,0,0,.1);">
                <div class="row">
                    <div class="col-8">
                        <p>Additional Fees</p>
                    </div>
                    <div class="col-4">
                        <p>64557 AED</p>
                    </div>
                </div>
                <hr>
                <a href="#">Account Summary</a>
                <p></p>
            </div>
        </div>

        <div class="row mt-5 mb-5 invCardContainer">
            <div class="d-none d-md-block col-md-5 col-lg-2 Performance">
                <h6>your performance</h6>
                <h5>Standard</h5>
                <a href="#">How to improve?</a>
            </div>

            <div class="col-12 col-md-10 col-lg-7 PerformanceRate">
                <h6>PERFORMANCE RATING</h6>
                <div class="dashCont">
                    <div>
                        <p>Cancellation Rate</p>
                        <div id="container1"></div>
                    </div>
                    <div>
                        <p>Return Rate</p>
                        <div id="container2"></div>
                    </div>
                    <div>
                        <p>Late Shipment Rate</p>
                        <div id="container3"></div>
                    </div>
                    <div>
                        <p>Negatine Feedback Rate</p>
                        <div id="container4"></div>
                    </div>
                </div>
            </div>

            <div class="col-md-5 col-lg-2 PerformanceScore">
                <h6>Feedback Score</h6>
                <div class="circle" style="background-color: #51d46d;">
                    <h6>77%</h6>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://rawgit.com/kimmobrunfeldt/progressbar.js/1.0.0/dist/progressbar.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script src="~/Scripts/Dashbored/Dashbored.js"></script>
</body>
</html>