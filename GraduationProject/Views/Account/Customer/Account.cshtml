@model CustomerViewModel
@section styles{
    <link href="~/Content/css/Customer/Account/Account.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
}
<div class="container">
    <div id="container-row" class="row">
        <div id="left-column" class="col-12 col-lg-3">
            <ul class="list-group">
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        <i class="far fa-user"></i> My jumia Account
                    </li>
                </a>
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        <i class="fa fa-box"></i> Orders
                    </li>
                </a>
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        <i class="far fa-edit"></i> Pending Reviews
                    </li>
                </a>
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        <i class="fa fa-money-bill"></i> Jumia Credit
                    </li>
                </a>
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        <i class="far fa-heart"></i> Saved Items
                    </li>
                </a>
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        <i class="far fa-clock"></i> Recently Viewed
                    </li>
                </a>
                <hr />
                <a href="#"><li class="list-group-item list-group-item-action">Details</li></a>
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        Address Book
                    </li>
                </a>
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        Change Password
                    </li>
                </a>
                <a href="#">
                    <li class="list-group-item list-group-item-action">
                        Newsletter Preferences
                    </li>
                </a>
                <hr />
                <li class="list-group-item">
                    <form action="#" method="POST" class="text-center">
                        <button class="" type="submit">LOGOUT</button>
                    </form>
                </li>
            </ul>
        </div>
        <div class="col-12 col-lg-9 cards-container">
            <div class="card">
                <h5 class="card-header">Account Overview</h5>
                <div class="card-body row">
                    <div class="col-12 col-md-6">
                        <div class="card">
                            <div class="card-header row justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-text">ACCOUNT DETAILS</h5>
                                </div>
                                <div class="">
                                    <a id="edit" href=""><i id="pen" class="fa fa-pen"></i></a>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="text-container">
                                    <p class="card-text first">@(Model.Fname)  (@Model.Lname)</p>
                                    <p class="card-text second">@Model.Email</p>
                                </div>
                                <a class="btn btn-link" href="#">Change Password</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="card">
                            <div class="card-header row justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-text">ADDRESS BOOK</h5>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="text-container">
                                    <p class="card-text first">Your default shipping @Model.Customer.Address</p>
                                    <p class="card-text second">No default shipping @Model.Customer.Address available</p>
                                </div>
                                <a class="btn btn-link" href="#">ADD DEFAULT ADDRESS</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body row">
                    <div class="col-12 col-md-6">
                        <div class="card">
                            <div class="card-header row justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-text">JUMAI PRIME</h5>
                                </div>

                            </div>

                            <div class="card-body">
                                <div class="text-container">
                                    <p class="card-text first">Jumia Prime</p>
                                    <p class="card-text second">
                                        Jumia Prime & Jumia Prime Plus are loyalty programs which allow
                                        its members to benefit from free delivery on their Jumia Express and Jumia Food orders,
                                        exclusive access to promotions as well as rewards and partnerships.
                                    </p>
                                </div>

                                <a id="prime-link" class="btn btn-link d-flex justify-content-around align-items-center" href="#">
                                    <i class="fa fa-crown"></i>
                                    <span>SUBSCRIPE JUMIA PRIMO</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div id="store-credit" class="card">
                            <div class="card-header row justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-text">JUMIA STORE CREDIT</h5>
                                </div>
                            </div>

                            <div class="card-body">
                                <div id="wallet" class="text-container">
                                    <i class="fa fa-wallet"></i>
                                    <span id="wallet-money">&nbsp;EGP 0.00</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="card-body row">
                    <div class="col-12 col-md-6">
                        <div class="card">
                            <div class="card-header row justify-content-between align-items-center">
                                <div>
                                    <h5 class="card-text">NEWSLETTER PREFERENCES</h5>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="text-container">
                                    <p class="card-text first">You are currently not subscribed to any of our newsletters.</p>
                                </div>
                                <a class="btn btn-link" href="#">EDIT NEWSLETTER PREFERENCES</a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>