@model Product
@{
    Layout = "~/Views/Shared/Seller_layout.cshtml";


    ViewBag.Title = "AddProduct";

}
<html>
<head>
    <meta charset="utf-8" />
   



    @section styles{
        <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="~/Content/css/addProduct.css" rel="stylesheet" />
        
        <link rel="icon" type="image/ico" href="https://www.jumia.com.eg/assets_he/favicon.717283be.ico">
    }
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
</head>
<body>
    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="container">
            <div class="row mycontainerdiv">
                <div class="col-12 product">
                    <div>
                        <h3>Add New Product</h3>
                    </div>
                    <br />
                    <div class="form-group ">
                        <label for="name">Name</label>
                        @*@Html.DisplayNameFor(a=>a.Name)*@
                        <input type="text"  name="Name" >  
                        @*@Html.EditorFor(a=>a.Name)*@
                        @Html.ValidationMessageFor(a => a.Name, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Cost">Price</label>
                        <input type="text"  name="Cost">
                        @Html.ValidationMessageFor(a => a.Cost, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group ">
                        <label for="CategoryID" class="col-4">Categories</label>

                        @Html.DropDownListFor(a => a.CategoryID, null, htmlAttributes: new { id = "browsers", @class = "col-8" })
                    </div>
                    <div class="form-group ">
                        <label for="BrandId" class="col-4">Brand</label>

                        @Html.DropDownListFor(a => a.BrandId, null, htmlAttributes: new { id = "browsers", @class = "col-8" })
                    </div>

                    <div class="form-group ">
                        <label for="CategoryID" class="col-4">Promotions</label>

                        @Html.DropDownListFor(a => a.PromotionsID, null, htmlAttributes: new { id = "browsers", @class = "col-8" })
                    </div>
                    
                    <div class="row Upload form-group" @*style="padding: .4rem;"*@>
                        <div class="col-4">
                            <input class="form-control" type="file" name="Image" >

                        </div>
                        @*<div class="col-8">
                            <div class="preview-images-zone">


                            </div>
                        </div>*@
                    </div>

                    <div class="row DescriptionDiv form-group">
                        <div>
                            <label for="Description" class="col-4">Description</label>
                        </div>
                        @Html.TextAreaFor(m => m.Description, new { id = "summernote" })
                    </div>

                    <br />
                    <input id="addproductinput" type="submit" value="Add"><br /><br />


                </div>
            </div>
        </div>
    </form>

    }
    @section scripts{
    <script>
            $('#summernote').summernote({
                placeholder: 'Add Description',
                tabsize: 2,
                height: 120,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['view', ['fullscreen', 'help']]
                ]
            });
    </script>


    @*<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/Scripts/addProduct.js"></script>*@
        }
</body>

</html>
